#!/bin/bash
########################################################################################################
# 此脚本不要修改
########################################################################################################

# 获取脚本所在目录
PATH_BASE=$(cd `dirname $0`; pwd)
PATH_ROOT=${PATH_BASE}/root_zwsample

# 获取模板CLASS
SAMPLE_CLASS=$(ls -l ${PATH_ROOT} |awk '/^d/ {print $NF}')


########################################################################################################
# 打印支持的模板
########################################################################################################
function print_usage()
{
	echo "usage : zwsample <class> <sample>"
	echo "        zwsample -h <class>"
	echo -n "class : "
	echo ${SAMPLE_CLASS}
}


########################################################################################################
# 更新模板
########################################################################################################
function update_sample()
{
	cp $2 ${PATH_ROOT}/$1 -rf
}

########################################################################################################
# 模板入口
########################################################################################################
function zwsample_entry()
{
	# 如果参数个数小于2, 打印提示
	if [ $# -lt 2 ];then
    	print_usage $@
		exit 1
	fi

	# 如果参数输入-h
	if [ $1 = '-h' ];then
		print_usage $@
		exit 1
	fi

	# 如果参数输入-update,
	if [ $1 = '-s' ];then
		update_sample $2 $3
		exit 1
	fi

	# 执行命令
	${PATH_ROOT}/$1/note.i $2
}

zwsample_entry $@
