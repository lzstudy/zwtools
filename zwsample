#!/bin/bash

# 获取脚本所在目录
PATH_BASE=$(cd `dirname $0`; pwd)

########################################################################################################
# 模板帮助
########################################################################################################
function zwsample_help()
{
	if [ $# = 1 ];then
		${PATH_BASE}/zwsample_root/note.i
	else
		${PATH_BASE}/zwsample_root/$2/note.i -h
	fi

    exit 1
}

########################################################################################################
# 模板入口
########################################################################################################
function zwsample_entry()
{
	# 如果参数个数小于2, 打印提示
	if [ $# -lt 2 ];then
    	zwsample_help $@
	fi

	# 如果参数输入 -h, 打印提示
	if [ $1 = '-h' ];then
		zwsample_help $@
	fi

	# 执行命令
	${PATH_BASE}/zwsample_root/$1/note.i $2
}

zwsample_entry $@
