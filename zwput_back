# 判断参数
if [ $# -lt 2 ];then
    echo "usage: zwp <-e/-s/-t> <file>"
    exit 1
fi

# 参数
ARG=$1
FILE=$2

# 待定参数
PATH_SCP=

# ZDLZ
source zwscp_config

# 判断参数
case $ARG in
	-a)
	PATH_SCP=$PATH_ZW
	;;

    -e)
    PATH_SCP=$PATH_EMBED
    ;;

    -s)
    PATH_SCP=$PATH_SERVE
    ;;

    -t)
    PATH_SCP=$PATH_TMP
    ;;

	*)
	echo "unknow arg $ARG"
	exit
esac

# 拷贝文件
scp -r $FILE $PATH_SCP
